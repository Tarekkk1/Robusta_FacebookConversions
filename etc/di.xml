<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\QuoteGraphQl\Model\Resolver\AddProductsToCart">
        <plugin name="robusta_facebookconversions_add_to_cart_graphql" type="Robusta\FacebookConversions\Plugin\AddToCartGraphQlPlugin" sortOrder="10"/>
    </type>
    <type name="Magento\WishlistGraphQl\Model\Resolver\AddProductsToWishlist">
        <plugin name="robusta_facebookconversions_add_to_wishlist_graphql" type="Robusta\FacebookConversions\Plugin\AddToWishlistGraphQlPlugin" sortOrder="10"/>
    </type>
    <type name="Magento\CatalogGraphQl\Model\Resolver\Products">
        <plugin name="robusta_facebookconversions_search_graphql" type="Robusta\FacebookConversions\Plugin\SearchGraphQlPlugin" sortOrder="10"/>
    </type>
    <type name="Magento\CustomerGraphQl\Model\Resolver\CreateCustomer">
        <plugin name="robusta_facebookconversions_create_customer_graphql" type="Robusta\FacebookConversions\Plugin\CompleteRegistrationGraphQlPlugin" sortOrder="10"/>
    </type>

    <type name="Magento\Framework\MessageQueue\ConsumerConfigurationInterface">
        <arguments>
            <argument name="consumers" xsi:type="array">
                <item name="facebookconversions_addtocart_consumer" xsi:type="array">
                    <item name="instanceType" xsi:type="string">Robusta\FacebookConversions\Model\Consumer\AddToCartConsumer</item>
                </item>
                <item name="facebookconversions_addtowishlist_consumer" xsi:type="array">
                    <item name="instanceType" xsi:type="string">Robusta\FacebookConversions\Model\Consumer\AddToWishlistConsumer</item>
                </item>
                <item name="facebookconversions_search_consumer" xsi:type="array">
                    <item name="instanceType" xsi:type="string">Robusta\FacebookConversions\Model\Consumer\SearchConsumer</item>
                </item>
                <item name="facebookconversions_completeregistration_consumer" xsi:type="array">
                    <item name="instanceType" xsi:type="string">Robusta\FacebookConversions\Model\Consumer\CompleteRegistrationConsumer</item>
                </item>
                <item name="facebookconversions_purchaseorder_consumer" xsi:type="array">
                    <item name="instanceType" xsi:type="string">Robusta\FacebookConversions\Model\Consumer\PurchaseOrderConsumer</item>
                </item>
            </argument>
        </arguments>
    </type>
</config>

