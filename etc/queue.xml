<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework-message-queue:etc/queue.xsd">
    <exchange name="robusta_facebookconversions_exchange" type="topic" connection="amqp">
        <binding id="addToCartBinding" topic="facebookconversions.addtocart" destinationType="queue" destination="facebookconversions_addtocart_queue"/>
        <binding id="purchaseOrderBinding" topic="facebookconversions.purchaseorder" destinationType="queue" destination="facebookconversions_purchaseorder_queue"/>
        <binding id="searchBinding" topic="facebookconversions.search" destinationType="queue" destination="facebookconversions_search_queue"/>
        <binding id="addToWishlistBinding" topic="facebookconversions.addtowishlist" destinationType="queue" destination="facebookconversions_addtowishlist_queue"/>
        <binding id="completeRegistrationBinding" topic="facebookconversions.completeregistration" destinationType="queue" destination="facebookconversions_completeregistration_queue"/>
    </exchange>
    <queue name="facebookconversions_addtocart_queue" consumer="facebookconversions_addtocart_consumer"/>
    <queue name="facebookconversions_purchaseorder_queue" consumer="facebookconversions_purchaseorder_consumer"/>
    <queue name="facebookconversions_search_queue" consumer="facebookconversions_search_consumer"/>
    <queue name="facebookconversions_addtowishlist_queue" consumer="facebookconversions_addtowishlist_consumer"/>
    <queue name="facebookconversions_completeregistration_queue" consumer="facebookconversions_completeregistration_consumer"/>
</config>
